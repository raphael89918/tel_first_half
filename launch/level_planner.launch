<launch>
    <node name="level_planner" pkg="tel_first_half" type="level_planner_node" output="screen"/>
    <param name="/level_planner/level_code" type="int" value="2" />

    <param name="/level_planner/level_2/strategy" type="int" value="0" />
    <param name="/level_planner/level_2/base_speed" type="double" value="0.25" />
    <param name="/level_planner/level_2/area_threshold" type="int" value="10000" />
    <param name="/level_planner/level_2/pixel_threshold" type="int" value="100" />

    <node name="motorCtrl_node" pkg="wheel_tokyo_weili" type="motorCtrl_node" output="screen"/>
    <node name="encoderCounter_node" pkg="wheel_tokyo_weili" type="encoderCounter_node" output="screen"/>
    <node name="wheel_planner_node" pkg="wheel_tokyo_weili" type="wheel_planner_node" output="screen"/>

    <include file = "$(find realsense2_camera)/launch/rs_camera.launch"/>
    <include file = "$(find ground_color)/launch/messenger.launch"/>


    <node
        ns="arduino_motor"
        pkg="rosserial_python"
        type="serial_node.py"
        name="Arduino_motor_node">
    <param name = "port" value = "/dev/ttyACM0"/>
    <param name = "baud" value = "57600"/>
    </node>

    <node
        ns="arduino_encoder"
        pkg="rosserial_python"
        type="serial_node.py"
        name="Arduino_encoder_node">
    <param name = "port" value = "/dev/ttyACM1"/>
    <param name = "baud" value = "57600"/>
    </node>

</launch>