<launch>
    <node name="level_planner" pkg="tel_first_half" type="level_planner_node" output="screen"/>

    <include file="$(find tel_first_half)/launch/level_planner_param.launch" />
    <include file = "$(find realsense2_camera)/launch/rs_camera.launch"/>
    <include file = "$(find ground_color)/launch/messenger.launch"/>

    <node
        ns="arduino_motor"
        pkg="rosserial_python"
        type="serial_node.py"
        name="Arduino_motor_node">
    <param name = "port" value = "/dev/ttyACM0"/>
    <param name = "baud" value = "57600"/>
    </node>

    <node
        ns="arduino_encoder"
        pkg="rosserial_python"
        type="serial_node.py"
        name="Arduino_encoder_node">
    <param name = "port" value = "/dev/ttyACM1"/>
    <param name = "baud" value = "57600"/>
    </node>

</launch>